{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/blogs/page.js",
    "src/app/lib/dbConnect.ts",
    "src/app/api/blogs/route.js",
    "src/app/categories/page.js",
    "src/app/api/categories/route.js",
    "src/app/categories/view/manager.js",
    "src/app/categories/edit/[id]/page.js"
  ],
  "exclude": [
    "node_modules"
  ]
}